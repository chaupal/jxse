<!DOCTYPE org.jxta:configuration>

<jxta>
  <peer descriptor="edge-multicast"/>

  <network>
    <rendezVous bootstrap="http://rdv.jxtahosts.net/cgi-bin/rendezvous.cgi?3"/>
    <relays bootstrap="http://rdv.jxtahosts.net/cgi-bin/relays.cgi?3"/>
  </network>
  
  <transport>
    <tcp>
      <address>
        <multicast enabled="false"></multicast>
        tcp://${host.any}:0
      </address>
    </tcp>
  </transport>

  <service>
    <relay>
      <outgoing enabled="true"/>
    </relay>
  </service>
</jxta>
